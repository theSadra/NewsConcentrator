@model NewsConcentratorSystem.Models.MessageReplaceWord

@{
    ViewData["Title"] = "Create";
}

<h1>افزودن</h1>

<h4>افزودن فیلتر جایگزینی کلمه</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label  class="control-label">کلمه</label>
                <input asp-for="Word" class="form-control" />
                <span asp-validation-for="Word" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">جایگزین</label>
                <input asp-for="ReplaceTo" class="form-control" />
                <span asp-validation-for="ReplaceTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="افزودن" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-controller="TelegramChannels" asp-route-id="@ViewBag.id">بازگشت به لیست</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
