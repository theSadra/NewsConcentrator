@model NewsConcentratorSystem.Models.TelegramChannel

@{
    ViewData["Title"] = "Create";
}

<h1 style="text-align: right !important; ">افزودن</h1>

<h4 style="text-align: right !important;" >کانال تلگرام</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" dir="rtl">
                <label asp-for="ChannelUserName" class="control-label"></label>
                <input asp-for="ChannelUserName" class="form-control" />
                <span asp-validation-for="ChannelUserName" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="افزودن" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">بازگشت به لیست</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
