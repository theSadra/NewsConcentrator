@model NewsConcentratorSystem.Models.TelegramScraperSettings

@{
    ViewData["Title"] = "Edit";
}

<h1>تنظیمات سیستم جمع آوردی</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Intervalmins" class="control-label"></label>
                <input asp-for="Intervalmins" class="form-control" />
                <span asp-validation-for="Intervalmins" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deschatid" class="control-label"></label>
                <input asp-for="Deschatid" class="form-control" />
                <span asp-validation-for="Deschatid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ذخیره" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">بازگشت به صفحه اصلی</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
